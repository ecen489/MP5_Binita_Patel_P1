<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.mycompany.mp5_binita_patel.MainActivity"
    android:weightSum="1">
    <TextView
        android:text="Music Playlist"
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation = "vertical"
        android:layout_margin="25dp"/>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/Fall_Apart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="I Fall apart"
            android:onClick="radioClick"/>
        <RadioButton
            android:id="@+id/Psycho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Psycho"
            android:onClick="radioClick"/>
        <RadioButton
            android:id="@+id/White_Iverson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="White Iverson"
            android:onClick="radioClick"/>
    </RadioGroup>

    <ImageView
        android:id="@+id/pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/capture" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/Play"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:onClick="Play"
            app:srcCompat="@android:drawable/ic_media_play" />
        <ImageButton
            android:id="@+id/Pause"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:onClick="Pause"
            app:srcCompat="@android:drawable/ic_media_pause" />



    </LinearLayout>


</LinearLayout>
